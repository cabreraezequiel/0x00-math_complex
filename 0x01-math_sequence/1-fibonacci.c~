#include "heron.h"
#include <math.h>

/**
 * display_complex_number - displays the complex numbers
 * @c: complex number c
 */

t_cell *heron(double p, double x0)
{
	double un = x0;
	t_cell *head;
	t_cell *aux;
	int m = 1,;

	head = malloc(sizeof(*aux));
	while((sqrt(p)) + (pow(10, -7)) < un)
	{
		un = ((1 / 2) * (m + p / m));
		aux->elt = un;
		aux = aux->next;
		if (m == 1)
			head = aux;
		m++;
	}

	return (head);
}
